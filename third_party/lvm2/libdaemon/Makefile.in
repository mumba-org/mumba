srcdir = @srcdir@
top_srcdir = @top_srcdir@
top_builddir = @top_builddir@

.PHONY: client server

SUBDIRS += client

ifeq (@BUILD_LVMETAD@,yes)
  SUBDIRS += server
server: client
else ifeq (@BUILD_LVMPOLLD@,yes)
  SUBDIRS += server
server: client
endif

ifeq ($(MAKECMDGOALS),distclean)
  SUBDIRS = client server
endif

include $(top_builddir)/make.tmpl
