@include /usr/share/policy/crosvm/common_device.policy

lseek: 1
madvise: 1
open: return ENOENT
openat: return ENOENT
prlimit64: 1
setrlimit: 1
sched_setscheduler: 1
socketpair: arg0 == AF_UNIX
prctl: arg0 == PR_SET_NAME
timerfd_create: 1
timerfd_gettime: 1
timerfd_settime: 1
