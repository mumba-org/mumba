  # # testonly = true

  data = [
    "//lib/testing/buildbot/filters/mash.browser_tests.filter",
    "//lib/testing/buildbot/filters/mojo.fyi.network_browser_tests.filter",
    "//lib/testing/buildbot/filters/browser_tests_cros_asan.filter",
    "//lib/testing/buildbot/filters/viz.browser_tests.filter",
